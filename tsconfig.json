{
  "compilerOptions": {
    "baseUrl": "./plugin",
    "inlineSourceMap": true,
    "inlineSources": true,
    "module": "ESNext",
    "target": "ES6",
    "allowJs": true,
    "noImplicitAny": true,
    "moduleResolution": "node16",
    "importHelpers": true,
    "isolatedModules": true,
    "strictNullChecks": true,
    "lib": [
      "DOM",
      "ES5",
      "ES6",
      "ES7"
    ],
    "types": [
      "node",
      "obsidian"
    ],
    "paths": {
      "obsidian": [
        "plugin/node_modules/obsidian/obsidian.d.ts"
      ]
    }
  },
  "include": [
    "plugin/**/*.ts",
    "plugin/node_modules/obsidian/obsidian.d.ts"
  ]
}
